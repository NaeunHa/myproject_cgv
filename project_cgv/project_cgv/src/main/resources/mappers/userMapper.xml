<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.springboot.cgv.domain.user.UserRepository">
	
	<select id="checkUserId" parameterType="com.springboot.cgv.domain.user.User" resultType="Integer">
		select
			count(userid)
		from
			user_mst
		where
			userid = #{userid};
	</select>
	
	<update id="signup" parameterType="com.springboot.cgv.domain.user.User">
		insert into
			user_mst
		value(
			0,
			#{userid},
			#{username},
			#{password},
			#{birthday},
			#{phone},
			#{email},
			#{role},
			now(),
			now()
		);
	</update>
	
	<select id="getUser" parameterType="com.springboot.cgv.domain.user.User">
		select
			*
		from 
			user_mst
		where
			username = #{username};
	</select>
	
</mapper>